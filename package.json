{
  "name": "better-makefile",
  "displayName": "Better Makefile",
  "description": "improved syntax highlighting of Makefiles in VS Code",
  "icon": "misc/icon_256.png",
  "author": {
    "name": "carlwr",
    "url": "https://github.com/carlwr"
  },
  "publisher": "carlwr",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlwr/vscode-better-makefile"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "syntax",
    "textmate",
    "highlighting",
    "coloring",
    "color",
    "makefile",
    "make",
    "gnu make"
  ],
  "contributes": {
    "languages": [
      {
        "id": "makefile",
        "aliases": [
          "Makefile",
          "makefile"
        ],
        "extensions": [
          "*.mak",
          ".mk"
        ],
        "filenames": [
          "Makefile",
          "makefile",
          "GNUmakefile",
          "OCamlMakefile"
        ],
        "firstLine": "^#!\\s*/usr/bin/make",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "makefile",
        "scopeName": "source.makefile",
        "path": "./syntaxes/makefile.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build": "pnpm build:convert && pnpm build:sort && pnpm build:validate-schema",
    "build:convert": "js-yaml src/makefile.tmLanguage.yaml > syntaxes/makefile.tmLanguage.json",
    "build:sort": "jsonsort syntaxes/makefile.tmLanguage.json",
    "build:validate-schema": "ajv validate -s schemas/tmLanguage.schema.json -d syntaxes/makefile.tmLanguage.json",
    "test": "vscode-tmgrammar-test \"test/grammar/!(*.XFAIL).mk\"",
    "LAST_dummy": "echo \"Dear Sir,\n\n'); UPDATE jsonrules SET trailing_commas='allowed'; --\" | sendmail packagejson-wg@nodejs.org"
  },
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "ajv-cli": "^5.0.0",
    "js-yaml": "^4.1.0",
    "json-sort-cli": "^4.0.9",
    "vscode-tmgrammar-test": "^0.1.3",
    "zzz_LAST_dummy": "npm:empty-npm-package@1.0.0"
  }
}
